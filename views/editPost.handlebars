<div class="back-btn-wrapper">
    <a href="/dashboard" class="back-btn">Back to Dashboard</a>
</div>
<section class="'edit-post">
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <p>Title:</p>
            <input class="form-input" name="post-title" id="post-title" type="text" value="{{post.title}}"/>
            <p>Text: </p>
            <input class="form-input" name="post-text" id="post-text">{{post.text}}</input>
        </div>
    <div class="button-wrapper">
            <button type="submit" class="save-post-btn">Save post</button>
            <button type="button" class="delete-post-btn">Delete post</button>
        </div>
    </form>
</section>

<script src="/editPost.js"></script>

